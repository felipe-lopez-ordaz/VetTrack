<%- include("partials/header") %>

<div class="dashboard-container">
    <aside class="sidebar">
        <h2>Dashboard</h2>
        <nav>
        <ul>
            <li><a href="/addAnimal">Add Animal</a></li>
            <li><a href="/animalVisits">Animal Profile</a></li>
            <li><a href="/editAnimal">Update Animal</a></li>
            <li><a href="/editVisits">Update Animal</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    </aside>

    <main class="main-content">
        <header class="main-header">
            <div>
                <h1>Animals DataBase</h1>
                <p>Today is, <%= new Date().toLocaleDateString('en-US', {weekday: 'long', month: 'long', day: 'numeric', year: 'numeric'})%></p>
            </div>

            <button class="add-button" onclick="window.location.href='/addAnimal'">Add Animal</button>
        </header>

        <section class="table-section">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>NAME</th>
                        <th>BREED</th>
                        <th>DATE OF BIRTH</th>

                    </tr>
                </thead>
                <tbody>
                    <% rows.forEach(row => { %>
                        <tr>
                            <td><%= row.animalId.toString().padStart(3,'0') %></td>
                            <td><%= row.name %></td>
                            <td><%= row.breed %></td>
                            <td><%= row.dob.toISOString().slice(0,10) %></td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </section>

<%-include("partials/footer") %>